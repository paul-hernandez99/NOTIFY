<div class="container p-4">
  <div class="row">
    {{#each notes}}
      <div class="col-md-3">
        <div class="card text-center">
          <div class="card-body">
              <h3 class="card-title text-uppercase">
                  {{title}}
              </h3>
            </a>
            <p class="m-2">{{description}}</p>
            <p>{{timeago created_at}}</p>
            <a href="/notes/delete/{{id}}" class="btn btn-danger">Delete Note</a>
            <a href="/notes/edit/{{id}}" class="btn btn-secondary">Edit</a>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>There are not notes saved yet.</p>
          <a href="/notes/add">Create One</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>
